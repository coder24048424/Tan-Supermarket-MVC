<%- include('partials/head', { pageTitle: 'Edit Product', bodyClass: 'page-admin' }) %>

<section class="glass-panel form-panel mx-auto" style="max-width: 720px;">
  <div class="d-flex justify-content-between flex-wrap align-items-center mb-4">
    <div>
      <span class="badge-pill">Legacy editor</span>
      <h2 class="section-title mb-1">Edit product</h2>
      <p class="subtle-text mb-0">Modernized styling for any routes that still reference this view.</p>
    </div>
    <a class="btn btn-secondary" href="/inventory">Back</a>
  </div>

  <% if (!product) { %>
    <div class="empty-state">
      <h4>No product found</h4>
    </div>
  <% } else { %>
    <form action="/editProduct/<%= product.id %>" method="POST" enctype="multipart/form-data" class="d-grid gap-3">
      <div>
        <label class="form-label" for="name">Product name</label>
        <input type="text" id="name" name="productName" class="form-control" value="<%= product.productName %>" required>
      </div>
      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label" for="quantity">Quantity</label>
          <input type="number" id="quantity" name="quantity" class="form-control" min="0" step="1" value="<%= product.quantity %>" required>
        </div>
        <div class="col-md-6">
          <label class="form-label" for="price">Price</label>
          <input type="number" id="price" name="price" class="form-control" min="0" step="0.01" value="<%= product.price %>" required>
        </div>
      </div>
      <div>
        <label class="form-label" for="image">Current Image</label>
        <img src="/images/<%= product.image %>" alt="<%= product.productName %>" style="width:180px;border-radius:18px;">
      </div>
      <div>
        <label class="form-label" for="image">Upload new image</label>
        <input type="file" id="image" name="image" class="form-control" accept="image/*">
      </div>
      <button type="submit" class="btn btn-primary btn-lg">Save changes</button>
    </form>
  <% } %>
</section>

<%- include('partials/footer') %>
