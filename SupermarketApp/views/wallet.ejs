<%- include('partials/head', { pageTitle: 'Wallet', bodyClass: 'page-profile' }) %>

<section class="glass-panel">
  <div class="d-flex justify-content-between flex-wrap align-items-center mb-3">
    <div>
      <h2 class="section-title mb-1">Store credit</h2>
      <p class="subtle-text mb-0">Top up your balance and pay faster at checkout.</p>
    </div>
    <a class="btn btn-secondary" href="/profile">Back to profile</a>
  </div>

  <% if (errors && errors.length) { %>
    <div class="toast error mb-3">
      <% errors.forEach(msg => { %><div><%= msg %></div><% }) %>
    </div>
  <% } %>
  <% if (success && success.length) { %>
    <div class="toast success mb-3">
      <% success.forEach(msg => { %><div><%= msg %></div><% }) %>
    </div>
  <% } %>

  <div class="split-layout">
    <div class="form-panel">
      <h4>Buy store credit</h4>
      <form action="/wallet/topup/prepare" method="POST" class="d-grid gap-3">
        <div>
          <label class="form-label" for="amount">Top-up amount (SGD)</label>
          <input type="number" step="0.01" min="0.01" id="amount" name="amount" class="form-control" placeholder="e.g. 10.00" required>
        </div>
        <button type="submit" class="btn btn-primary">Proceed to payment</button>
      </form>
    </div>

    <div class="summary-card">
      <h4>Wallet balance</h4>
      <p class="summary-total">$<%= Number(balance || 0).toFixed(2) %></p>
      <div class="summary-row">
        <span>Currency</span>
        <span>SGD</span>
      </div>
      <div class="summary-row">
        <span>Usage</span>
        <span>Checkout payment</span>
      </div>
      <div class="mt-3">
        <a class="btn btn-secondary w-100" href="/wallet/history">View top-up history</a>
      </div>
      <div class="mt-2">
        <a class="btn btn-secondary w-100" href="/payment">Use for payment</a>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
