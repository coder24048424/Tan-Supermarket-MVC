  <%- include('partials/head', { pageTitle: 'Add Product', bodyClass: 'page-admin' }) %>

<section class="glass-panel form-panel mx-auto" style="max-width: 720px;">
  <div class="d-flex justify-content-between flex-wrap align-items-center mb-4">
    <div>
      <h2 class="section-title mb-1">Add fresh inventory</h2>
    </div>
    <a class="btn btn-secondary" href="/inventory">Back to inventory</a>
  </div>

  <form action="/addProduct" method="POST" enctype="multipart/form-data" class="d-grid gap-3">
    <div>
      <label class="form-label" for="productName">Product name</label>
      <input type="text" id="productName" name="productName" class="form-control" required>
    </div>
    <div class="row g-3">
      <div class="col-md-6">
        <label class="form-label" for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" class="form-control" min="0" required>
      </div>
      <div class="col-md-6">
        <label class="form-label" for="price">Price ($)</label>
        <input type="number" id="price" name="price" class="form-control" min="0" step="0.01" required>
      </div>
    </div>
    <div>
      <label class="form-label" for="category">Category (optional)</label>
      <input type="text" id="category" name="category" class="form-control" list="categoryOptions" placeholder="e.g., Fresh Produce">
      <% if (categories && categories.length) { %>
        <datalist id="categoryOptions">
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>"></option>
          <% }) %>
        </datalist>
      <% } %>
      <p class="subtle-text mb-0 mt-1">Choose an existing category or type a new one.</p>
    </div>
    <div>
      <label class="form-label" for="image">Product image</label>
      <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
    </div>
    <button type="submit" class="btn btn-primary btn-lg">Add product</button>
  </form>
</section>

<%- include('partials/footer') %>
