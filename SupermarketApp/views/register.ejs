<%- include('partials/head', { pageTitle: "Create account • Tan's Supermarket", bodyClass: 'page-auth' }) %>

<section class="auth-layout glass-panel">
  <div class="auth-hero">
    <span class="badge-pill">Start in minutes</span>
    <h1>Create account</h1>
    <p class="subtle-text">Experience the grocery flow inspired by the Dribbble concept — bold, clean, friendly.</p>
  </div>

  <% if (messages && messages.length) { %>
    <div class="toast error">
      <% messages.forEach(message => { %>
        <div><%= message %></div>
      <% }) %>
    </div>
  <% } %>

  <form action="/register" method="POST" class="d-grid gap-3">
    <div>
      <label class="form-label" for="username">Username</label>
      <input type="text" id="username" name="username" class="form-control" required value="<%= formData && formData.username ? formData.username : '' %>">
    </div>
    <div>
      <label class="form-label" for="email">Email</label>
      <input type="email" id="email" name="email" class="form-control" required value="<%= formData && formData.email ? formData.email : '' %>">
    </div>
    <div>
      <label class="form-label" for="password">Password</label>
      <input type="password" id="password" name="password" class="form-control" required>
    </div>
    <div>
      <label class="form-label" for="address">Address</label>
      <input type="text" id="address" name="address" class="form-control" required value="<%= formData && formData.address ? formData.address : '' %>">
    </div>
    <div>
      <label class="form-label" for="contact">Contact Number</label>
      <input type="text" id="contact" name="contact" class="form-control" required value="<%= formData && formData.contact ? formData.contact : '' %>">
    </div>
    <button type="submit" class="btn btn-primary">Create account</button>
    <p class="subtle-text text-center mb-0">Already have access? <a href="/login">Sign in</a></p>
  </form>
</section>

<%- include('partials/footer') %>
