<%- include('partials/head', { pageTitle: "Create account | Tan's Supermarket", bodyClass: 'page-auth' }) %>

<section class="auth-layout glass-panel">
  <div class="auth-hero">
    <h1>Create account</h1>
    <p class="subtle-text">Create an account to unlock exclusive deals, track your purchases, and enjoy more perks.</p>
  </div>

  <% if (messages && messages.length) { %>
    <div class="toast error">
      <% messages.forEach(message => { %>
        <div><%= message %></div>
      <% }) %>
    </div>
  <% } %>
  <% if (successMessages && successMessages.length) { %>
    <div class="toast success">
      <% successMessages.forEach(message => { %>
        <div><%= message %></div>
      <% }) %>
    </div>
  <% } %>

  <form action="/register" method="POST" class="d-grid gap-3">
    <div>
      <label class="form-label" for="username">Username</label>
      <input type="text" id="username" name="username" class="form-control" placeholder="e.g., janedoe" required value="<%= formData && formData.username ? formData.username : '' %>">
    </div>
    <div>
      <label class="form-label" for="email">Email</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="e.g., jane@example.com" required value="<%= formData && formData.email ? formData.email : '' %>">
    </div>
    <div>
      <label class="form-label" for="password">Password</label>
      <div class="password-field">
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" required>
        <button type="button" class="password-toggle" data-target="password" aria-label="Toggle password visibility">Show</button>
      </div>
      <p class="subtle-text mb-0" style="font-size:0.9rem;">Use at least 8 characters with uppercase, lowercase, number, and special character.</p>
    </div>
    <div>
      <label class="form-label" for="confirmPassword">Confirm password</label>
      <div class="password-field">
        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Re-enter password" required>
        <button type="button" class="password-toggle" data-target="confirmPassword" aria-label="Toggle confirm password visibility">Show</button>
      </div>
    </div>
    <div>
      <label class="form-label" for="address">Address</label>
      <input type="text" id="address" name="address" class="form-control" placeholder="123 Main St, Apt 4B" required value="<%= formData && formData.address ? formData.address : '' %>">
    </div>
    <div>
      <label class="form-label" for="contact">Contact Number</label>
      <input type="text" id="contact" name="contact" class="form-control" placeholder="81234567" required value="<%= formData && formData.contact ? formData.contact : '' %>">
    </div>
  <button type="submit" class="btn btn-primary">Create account</button>
  <p class="subtle-text text-center mb-0">Already have access? <a href="/login">Sign in</a></p>
</form>
</section>

<script>
  (() => {
    document.querySelectorAll('.password-toggle').forEach(toggle => {
      const targetId = toggle.getAttribute('data-target');
      const input = document.getElementById(targetId);
      if (!input) return;
      toggle.addEventListener('click', () => {
        const isPassword = input.type === 'password';
        input.type = isPassword ? 'text' : 'password';
        toggle.textContent = isPassword ? 'Hide' : 'Show';
      });
    });
  })();
</script>

<%- include('partials/footer') %>
