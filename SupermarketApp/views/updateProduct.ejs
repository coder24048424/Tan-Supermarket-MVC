<%- include('partials/head', { pageTitle: 'Update Product', bodyClass: 'page-admin' }) %>

<section class="glass-panel form-panel mx-auto" style="max-width: 760px;">
  <div class="d-flex justify-content-between flex-wrap align-items-start mb-4">
    <div>
      <h2 class="section-title mb-1">Update product</h2>
    </div>
    <a class="btn btn-secondary" href="/inventory">Back to inventory</a>
  </div>

  <% if (!product) { %>
    <div class="empty-state">
      <h4>No product found</h4>
      <p>Please head back to the catalog.</p>
    </div>
  <% } else { %>
    <form action="/updateProduct/<%= product.id %>" method="POST" enctype="multipart/form-data" class="d-grid gap-3">
      <div>
        <label class="form-label" for="productName">Product name</label>
        <input type="text" class="form-control" id="productName" name="productName" value="<%= product.productName %>" required>
      </div>

      <div class="row g-3">
        <div class="col-md-6">
          <label class="form-label" for="quantity">Quantity</label>
          <input type="number" class="form-control" id="quantity" name="quantity" min="0" step="1" value="<%= product.quantity %>" required>
        </div>
        <div class="col-md-6">
          <label class="form-label" for="price">Price</label>
          <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" value="<%= product.price %>" required>
        </div>
      </div>

      <div class="glass-panel">
        <label class="form-label">Current image</label>
        <img src="/images/<%= product.image %>" alt="<%= product.productName %>" style="width:160px;border-radius:18px;">
      </div>

      <div>
        <label class="form-label" for="image">Upload new image</label>
        <input class="form-control" type="file" id="image" name="image" accept="image/*">
      </div>

      <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary btn-lg">Update product</button>
      </div>
    </form>
  <% } %>
</section>

<%- include('partials/footer') %>
