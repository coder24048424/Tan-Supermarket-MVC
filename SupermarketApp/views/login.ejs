<%- include('partials/head', { pageTitle: "Sign in â€¢ Tan's Supermarket", bodyClass: 'page-auth' }) %>

<section class="auth-layout glass-panel">
  <div class="auth-hero">
    <span class="badge-pill">Welcome back</span>
    <h1>Sign in</h1>
    <p class="subtle-text">Access your curated grocery dashboard inspired by the Dribbble layout.</p>
  </div>

  <% if (errors && errors.length) { %>
    <div class="toast error">
      <% errors.forEach(error => { %>
        <div><%= error %></div>
      <% }) %>
    </div>
  <% } %>

  <% if (messages && messages.length) { %>
    <div class="toast success">
      <% messages.forEach(message => { %>
        <div><%= message %></div>
      <% }) %>
    </div>
  <% } %>

  <form action="/login" method="POST" class="d-grid gap-3">
    <div>
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" class="form-control" required>
    </div>

    <div>
      <label for="password" class="form-label">Password</label>
      <input type="password" id="password" name="password" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    <p class="subtle-text text-center mb-0">No account yet? <a href="/register">Create one</a></p>
  </form>
</section>

<%- include('partials/footer') %>
